<Window x:Class="Host.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Communication avec Chrome Web App" Height="95" Width="560" MinWidth="575" MinHeight="105" Padding="0,0,10,10">
    <Grid>
        <TextBox HorizontalAlignment="Left" 
                 Margin="10,10,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Text="{Binding Path=Message, UpdateSourceTrigger=PropertyChanged}" 
                 FontSize="24" 
                 MaxLines="1" 
                 Height="44" 
                 Width="533" 
                 Background="White">
            <TextBox.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF831919" Offset="0"/>
                    <GradientStop Color="#FFEE1B1B" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.Foreground>
        </TextBox>
    </Grid>
</Window>
